<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Comparison"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-comparison__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <!-- Tab 1: General Settings -->
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Section Title"
                                                fieldDescription="Main title displayed above the comparison grid (e.g., 'Process')"
                                                name="./title"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </general>

                    <!-- Tab 2: Column 1 -->
                    <column1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Column 1"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column1HeadingNum
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Heading Number"
                                                fieldDescription="Optional number displayed before the heading (e.g., '01')"
                                                name="./column1HeadingNum"/>
                                            <column1Title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Title"
                                                fieldDescription="Column heading title"
                                                name="./column1Title"/>
                                            <column1Description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Description"
                                                fieldDescription="Short description text below the title"
                                                name="./column1Description"/>
                                            <!-- Column 1 List Items -->
                                            <column1ItemsContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/container"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column1Items
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="List Items"
                                                        fieldDescription="Add list items for this column">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./column1Items">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <itemText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Item Text"
                                                                    name="itemText"
                                                                    required="{Boolean}true"/>
                                                            </items>
                                                        </field>
                                                    </column1Items>
                                                </items>
                                            </column1ItemsContainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </column1>

                    <!-- Tab 3: Column 2 -->
                    <column2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Column 2"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column2HeadingNum
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Heading Number"
                                                fieldDescription="Optional number displayed before the heading (e.g., '02')"
                                                name="./column2HeadingNum"/>
                                            <column2Title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Title"
                                                fieldDescription="Column heading title"
                                                name="./column2Title"/>
                                            <column2Description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Description"
                                                fieldDescription="Short description text below the title"
                                                name="./column2Description"/>
                                            <!-- Column 2 List Items -->
                                            <column2ItemsContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/container"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column2Items
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="List Items"
                                                        fieldDescription="Add list items for this column">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./column2Items">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <itemText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Item Text"
                                                                    name="itemText"
                                                                    required="{Boolean}true"/>
                                                            </items>
                                                        </field>
                                                    </column2Items>
                                                </items>
                                            </column2ItemsContainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </column2>

                    <!-- Tab 4: Column 3 -->
                    <column3
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Column 3"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column3HeadingNum
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Heading Number"
                                                fieldDescription="Optional number displayed before the heading (e.g., '03')"
                                                name="./column3HeadingNum"/>
                                            <column3Title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Title"
                                                fieldDescription="Column heading title"
                                                name="./column3Title"/>
                                            <column3Description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Description"
                                                fieldDescription="Short description text below the title"
                                                name="./column3Description"/>
                                            <!-- Column 3 List Items -->
                                            <column3ItemsContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/container"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column3Items
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="List Items"
                                                        fieldDescription="Add list items for this column">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./column3Items">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <itemText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Item Text"
                                                                    name="itemText"
                                                                    required="{Boolean}true"/>
                                                            </items>
                                                        </field>
                                                    </column3Items>
                                                </items>
                                            </column3ItemsContainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </column3>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
