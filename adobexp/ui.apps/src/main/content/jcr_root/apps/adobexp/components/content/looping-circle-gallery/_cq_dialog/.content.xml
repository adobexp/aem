<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Looping Circle Gallery"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-looping-circle-gallery__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <!-- Tab 1: Gallery Settings -->
                    <gallerySettings
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Gallery Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <!-- Gallery Message -->
                                            <galleryMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Gallery Message"
                                                fieldDescription="The overlay message displayed in the center of the gallery (e.g., 'Crafting memorable brands by creating lasting impressions...')"
                                                name="./galleryMessage"
                                                rows="4"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </gallerySettings>

                    <!-- Tab 2: Gallery Images -->
                    <galleryImages
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Gallery Images"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imagesDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/text"
                                                text="Configure up to 8 images for the circular gallery. Each image will be positioned around the rotating circle."/>
                                            <!-- Gallery Images Multifield -->
                                            <galleryImagesContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/container"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <galleryImages
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Gallery Images (8 images recommended)"
                                                        fieldDescription="Add images to display in the rotating gallery">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./galleryImages">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <!-- Collapsible wrapper for gallery image items -->
                                                                <wrapper
                                                                    jcr:primaryType="nt:unstructured"
                                                                    jcr:title="Click to expand image"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                    <layout
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <imagePath
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                            fieldLabel="Image"
                                                                            fieldDescription="Select an image from the DAM"
                                                                            name="imagePath"
                                                                            required="{Boolean}true"
                                                                            rootPath="/content/dam"/>
                                                                        <imageAlt
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Alt Text"
                                                                            fieldDescription="Alternative text for the image (for accessibility)"
                                                                            name="imageAlt"/>
                                                                    </items>
                                                                </wrapper>
                                                            </items>
                                                        </field>
                                                    </galleryImages>
                                                </items>
                                            </galleryImagesContainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </galleryImages>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
