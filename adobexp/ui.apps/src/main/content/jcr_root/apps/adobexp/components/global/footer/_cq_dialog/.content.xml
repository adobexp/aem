<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Footer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-footer__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <!-- Tab 1: General Settings -->
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <!-- Footer Heading -->
                                            <footerHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Footer Heading"
                                                fieldDescription="Main heading text displayed in the footer (e.g., 'Make it happen')"
                                                name="./footerHeading"/>
                                            <!-- Footer Lead Text -->
                                            <footerLead
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Footer Lead Text"
                                                fieldDescription="Lead text displayed below the heading (e.g., 'Not a fan of forms? Email us instead.')"
                                                name="./footerLead"/>
                                            <!-- Footer Email -->
                                            <footerEmail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Footer Email"
                                                fieldDescription="Email address displayed in the footer (e.g., 'hi@trysta.com')"
                                                name="./footerEmail"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </general>

                    <!-- Tab 2: Main Menu -->
                    <mainMenu
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Main Menu"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <!-- Main Menu Title -->
                                            <mainMenuTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Main Menu Title"
                                                fieldDescription="Title for the main menu column (e.g., 'Menu')"
                                                name="./mainMenuTitle"/>
                                            <!-- Main Menu Items Multifield -->
                                            <mainMenuItemsContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/container"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <mainMenuItems
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Main Menu Items"
                                                        fieldDescription="Add menu items for the main menu column">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./mainMenuItems">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <!-- Collapsible wrapper for menu items -->
                                                                <wrapper
                                                                    jcr:primaryType="nt:unstructured"
                                                                    jcr:title="Click to expand menu item"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                    <layout
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <menuItemTitle
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Menu Item Title"
                                                                            name="menuItemTitle"
                                                                            required="{Boolean}true"/>
                                                                        <menuItemLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                            fieldLabel="Menu Item Link"
                                                                            name="menuItemLink"
                                                                            rootPath="/content"/>
                                                                        <menuItemExternal
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="Check if this is an external link (opens in new tab)"
                                                                            name="menuItemExternal"
                                                                            text="External Link"
                                                                            uncheckedValue="false"
                                                                            value="true"/>
                                                                    </items>
                                                                </wrapper>
                                                            </items>
                                                        </field>
                                                    </mainMenuItems>
                                                </items>
                                            </mainMenuItemsContainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </mainMenu>

                    <!-- Tab 3: Useful Menu -->
                    <usefulMenu
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Useful Menu"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <!-- Useful Menu Title -->
                                            <usefulMenuTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Useful Menu Title"
                                                fieldDescription="Title for the useful menu column (e.g., 'Useful')"
                                                name="./usefulMenuTitle"/>
                                            <!-- Useful Menu Items Multifield -->
                                            <usefulMenuItemsContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/container"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <usefulMenuItems
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Useful Menu Items"
                                                        fieldDescription="Add menu items for the useful menu column">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./usefulMenuItems">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <!-- Collapsible wrapper for useful menu items -->
                                                                <wrapper
                                                                    jcr:primaryType="nt:unstructured"
                                                                    jcr:title="Click to expand menu item"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                    <layout
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <usefulItemTitle
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Menu Item Title"
                                                                            name="usefulItemTitle"
                                                                            required="{Boolean}true"/>
                                                                        <usefulItemLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                            fieldLabel="Menu Item Link"
                                                                            name="usefulItemLink"
                                                                            rootPath="/content"/>
                                                                        <usefulItemExternal
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="Check if this is an external link (opens in new tab)"
                                                                            name="usefulItemExternal"
                                                                            text="External Link"
                                                                            uncheckedValue="false"
                                                                            value="true"/>
                                                                    </items>
                                                                </wrapper>
                                                            </items>
                                                        </field>
                                                    </usefulMenuItems>
                                                </items>
                                            </usefulMenuItemsContainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </usefulMenu>

                    <!-- Tab 4: Legal & Copyright -->
                    <legalCopyright
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Legal &amp; Copyright"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <!-- Privacy Policy Title -->
                                            <privacyPolicyTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Privacy Policy Title"
                                                fieldDescription="Text for the privacy policy link (e.g., 'Privacy Policy')"
                                                name="./privacyPolicyTitle"/>
                                            <!-- Privacy Policy Link -->
                                            <privacyPolicyLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Privacy Policy Link"
                                                fieldDescription="Link to the privacy policy page (e.g., /content/mysite/privacy-policy or https://www.example.com)"
                                                name="./privacyPolicyLink"
                                                rootPath="/content"/>
                                            <!-- Copyright Text -->
                                            <copyrightText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Copyright Text"
                                                fieldDescription="Copyright text displayed in the footer (e.g., 'Â© Trysta 2025.')"
                                                name="./copyrightText"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </legalCopyright>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
